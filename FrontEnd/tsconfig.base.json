{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "modules",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    },
    "exclude": [
        "node_modules"
    ]
}
